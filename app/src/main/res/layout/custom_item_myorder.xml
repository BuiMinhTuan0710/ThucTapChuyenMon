<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imgFoodSearch"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="20dp"
            android:src="@drawable/giohang"
            />
        <LinearLayout
            android:layout_marginLeft="@dimen/margin20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/txtMaHD"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald"
                    android:textStyle="bold"
                    android:text=""/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald"
                    android:textStyle="bold"
                    android:text="trạng thái"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtNguoiNhan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/oswald"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:text="Người nhận"/>
                    <TextView
                        android:id="@+id/txtSDT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/oswald"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:text="Số điện thoại"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txtTrangThai"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin10"
                    android:background="@drawable/custom_round_10dp"
                    android:drawableStart="@drawable/ic_check_24dp"
                    android:drawablePadding="@dimen/size5dp"
                    android:fontFamily="@font/oswald"
                    android:paddingBottom="@dimen/size5dp"
                    android:textSize="13sp"
                    android:text="Đang Giao"
                    android:textColor="@color/colorWhite"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/txtDiaChi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oswald"
                android:textStyle="bold"
                android:maxLines="1"
                android:text="q9"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>