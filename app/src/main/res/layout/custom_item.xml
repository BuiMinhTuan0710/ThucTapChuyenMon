<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
        android:weightSum="10"
    android:layout_marginTop="10dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgHinhSP"
        android:layout_marginLeft="10dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/pho" />

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTenInfo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Phở Hà Nội"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSoLuongDat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_shopping_cart_black_24dp"
            android:text="0"
            android:textColor="@color/colorblack"
            android:textSize="16dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtGiaInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="150,000đ"
            android:textColor="@color/colorBlue"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSoLuong"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="right"
            android:text="x10"
            android:background="@color/colorRed"
            android:textColor="@color/colorWhite"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>