<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="500dp">

    <TextView
        android:layout_marginTop="@dimen/margin20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify your phone number"
        android:layout_marginLeft="@dimen/margin20"
        android:layout_marginRight="@dimen/margin20"
        android:textSize="25dp"
        android:textColor="#0B0B61"
        android:textStyle="bold"
        android:gravity="center"/>
    <TextView
        android:layout_marginTop="@dimen/margin10"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/margin20"
        android:layout_marginRight="@dimen/margin20"
        android:layout_height="wrap_content"
        android:text="An 6-digit code has begin send you"
        android:textSize="@dimen/margin20"
        android:textColor="@color/colorblack"
        android:gravity="center"/>
    <TextView
        android:layout_marginTop="@dimen/margin20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your code"
        android:layout_marginLeft="@dimen/margin20"
        android:layout_marginRight="@dimen/margin20"
        android:textSize="@dimen/margin20"
        android:textColor="#B40431"
        android:textStyle="bold"
        android:gravity="center"/>
    <EditText
        android:layout_gravity="center"
        android:id="@+id/edtOTP"
        android:layout_width="200dp"
        android:layout_marginLeft="@dimen/margin20"
        android:layout_marginRight="@dimen/margin20"
        android:layout_height="@dimen/margin50"
        android:focusable="true"
        android:textAlignment="center"
        android:inputType="number"
        style="@style/Widget.AppCompat.EditText"
        android:maxLength="6"
        android:textSize="20sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginTop="@dimen/margin20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't receive the code?"
            android:textSize="20sp"
            android:textColor="@color/colorblack"
            />

        <TextView
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin20"
            android:layout_marginTop="@dimen/margin20"
            android:layout_weight="1"
            android:text="@string/resend"
            android:textAlignment="textStart"
            android:textColor="#0B0B61"
            android:textSize="@dimen/margin20"
            android:textStyle="bold" />
    </LinearLayout>
    <Button
        android:enabled="false"
        android:layout_marginLeft="@dimen/margin20"
        android:layout_marginRight="@dimen/margin20"
        android:layout_marginBottom="@dimen/margin20"
        android:id="@+id/btnVerify"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin30"
        android:background="@drawable/custom_verify"
        android:text="Verify"
        android:textAllCaps="false"
        android:textColor="@color/colorVerify"
        android:textStyle="bold"
        android:textSize="@dimen/margin20"
        />
</LinearLayout>